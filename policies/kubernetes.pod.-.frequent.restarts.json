{
  "policy": {
    "actions": [
      {
        "category": 2,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "actual",
        "level": 0,
        "metric": "restart_count",
        "operator": ">"
      }
    ],
    "deleted": false,
    "description": "This pod has been frequently restarted.",
    "duration": 900,
    "enabled": true,
    "name": "Kubernetes Pod - Frequent Restarts",
    "scope": {
      "elementAttributesAll": true,
      "elementTagsAll": true,
      "elementTypes": [
        "Kubernetes Pod"
      ]
    }
  }
}